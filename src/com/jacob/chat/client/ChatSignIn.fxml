<StackPane prefHeight="366.0" prefWidth="451.0" stylesheets="@ChatSignIn.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jacob.chat.client.ChatSignInController">
